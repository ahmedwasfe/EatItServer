<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="10dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_order_details_food"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_order_details_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:text="food name"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@id/img_order_details_food"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_order_details_food_addon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Addon"
            android:textSize="16sp"
            android:padding="8dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/img_order_details_food"
            app:layout_constraintTop_toBottomOf="@id/txt_order_details_food_quantity" />

        <TextView
            android:id="@+id/txt_order_details_food_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="size"
            android:textSize="16sp"
            android:padding="8dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/img_order_details_food"
            app:layout_constraintTop_toBottomOf="@id/txt_order_details_food_addon" />


        <TextView
            android:id="@+id/txt_order_details_food_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="16sp"
            android:padding="8dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/img_order_details_food"
            app:layout_constraintTop_toBottomOf="@id/txt_order_details_food_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>